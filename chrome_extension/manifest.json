 
 {
    "name": "Steamcito - Convertí Steam a pesos argentinos",
    "version": "0.1",
    "description": "Calculador y visualizador de impuestos automatizado para todos los artículos de Steam para Argentina",
	"manifest_version": 2,
	"icons": { 
		"128": "icon128.png" 
	},


	 "content_scripts": [
		{ 
			"matches": ["https://store.steampowered.com/*"],
			"run_at": "document_idle",
			"js": ["js/data.js","js/global_functions.js","js/trigger.js"],
			"css": ["css/styles.css"]
			
		},		 
		{
			"matches": ["https://store.steampowered.com/cart*"],
			"run_at": "document_idle",
			"js": ["js/cart_functions.js"]
		},
		{
			"matches": ["https://store.steampowered.com/checkout*"],
			"run_at": "document_idle",
			"js": ["js/checkout_functions.js"]
		}
	 ]
  }